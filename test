<div class="card" id="content">
  <div class="score" id="score">Score: 0/4</div>
  <h1>Hey Babe...</h1>
  <p>little quiz please</p>
  <button onclick="nextQuestion(1)">START</button>
</div>

<div class="toast" id="toast">
  ‚ùå Invalid ‚Äî it seems you are already my Valentine </div>

<script>
  let currentScore = 0;
  const totalQuestions = 4;

  function updateScore() {
    document.getElementById("score").innerText =
      `Score: ${currentScore}/${totalQuestions}`;
  }

  function answer(correct, nextStep) {
    if (correct) currentScore++;
    updateScore();
    nextQuestion(nextStep);
  }

  function nextQuestion(step) {
    const content = document.getElementById("content");

    if (step === 1) {
      content.innerHTML = `
        <div class="score" id="score"></div>
       
        <h1><p>Q1. Who loves you the most?</p></h1>
        <button onclick="answer(true, 2)">YOU </button>
        <button onclick="answer(false, 2)">ME </button>
      `;
      updateScore();
    }

    else if (step === 2) {
      content.innerHTML = `
        <div class="score" id="score"></div>
        
        <h1><p>Who is the luckiest person here?</p></h1>
        <button onclick="answer(true, 3)">ME</button>
        <button onclick="answer(false, 3)">YOU</button>
      `;
      updateScore();
    }

    else if (step === 3) {
      content.innerHTML = `
        <div class="score" id="score"></div>
        
        <h1><p>Do we make a perfect team? </p></h1>
        <button onclick="answer(true, 4)">ABSOLUTELY</button>
        <button onclick="answer(false, 4)">YESÔ∏è</button>
      `;
      updateScore();
    }

    else if (step === 4) {
      content.innerHTML = `
        <div class="score" id="score"></div>
        
        <h1><p>Are you smiling right now? </p></h1>
        <button onclick="answer(true, 5)">YES </button>
        <button onclick="answer(false, 5)">MAYBE</button>
      `;
      updateScore();
    }

    else if (step === 5) {
      // FINAL VALENTINE PAGE
      content.innerHTML = `
        <div style="font-size:40px;">üíñ</div>
        <h1>LAST QUESTION Ô∏è</h1>
        <p>
          You scored <b>${currentScore}/${totalQuestions}</b> üòç
          <br><br>
          Will you be my Valentine? üíó
        </p>

        <button onclick="sayYes()">YES </button>
        <button onclick="showToast()">NO </button>
      `;
    }
  }

  function sayYes() {
    document.body.innerHTML = `
      <div style="
        display:flex;
        flex-direction:column;
        justify-content:center;
        align-items:center;
        height:100vh;
        background:linear-gradient(135deg, #ff9a9e, #fad0c4);
        font-family:'Comic Sans MS', cursive;
        text-align:center;">
        <h1 style="color:#ff4d6d;">YAY!!! You're my Valentine! </h1>
        <p style="font-size:22px;"> 
          
          Thanks Babe for making my day special üíó
        </p>
      </div>`;
  }

  function showToast() {
    const toast = document.getElementById("toast");
    toast.style.display = "block";

    setTimeout(() => {
      toast.style.display = "none";
    }, 3000);
  }
</script>

</body>
